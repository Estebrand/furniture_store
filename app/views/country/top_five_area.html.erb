<h1>Top Five Areas</h1>


<h3> List: </h3>

<div>
	<table  class = "table">

		<thead>
			<tr>
				<th>Name</th>
				<th>Capital</th>
				<th>area</th>
				<th colspan = "3"></th>
			</tr>
		</thead>

		

			<tbody>
				<% @states.each do |state| %>
					<tr>
						<td> <%= state.name %></td>
						<td> <%= state.capital %></td>
						<td> <%= state.area %> </td>
					</tr>
				<%end %>
			</tbody>


	</table>
</div>