<h1>All States in the Country</h1>



<h3>StatesList: </h3>

<div>
	<table  class = "table">

		<thead>
			<tr>
				<th>Name</th>
				<th>Capital</th>
				<th>Population</th>
				<th>Area</th>
				<th colspan = "3"></th>
			</tr>
		</thead>

		

			<tbody>
				<% @states.each do |s| %>
					<tr>
						<td>	<%= s.name %>
							
						</td>
						<td> <%= s.capital %>
							
						</td>
						<td> <%= s.population %> 
						</td>
						<td>
								<%= s.area  %>
						</td>
					</tr>
				<%end %>
			</tbody>


	</table>
</div>



<div class = "links">
<%= link_to 'Top Popluation', top_pop_path %>
<%= link_to 'Top Areas', top_area_path %>


</div>